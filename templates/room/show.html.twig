{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>RoomNumber</th>
                <td>{{ room.RoomNumber }}</td>
            </tr>
            <tr>
                <th>Is_Available</th>
                <td>{{ room.IsAvailable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ room.Description }}</td>
            </tr>
            <tr>
                <th>RoomPrice</th>
                <td>{{ room.RoomPrice }}</td>
            </tr>
            <tr>
                <th>MaxGuest</th>
                <td>{{ room.MaxGuest }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('room_index') }}">back to list</a>

    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}
