{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1>Room index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>RoomNumber</th>
                <th>Is_Available</th>
                <th>Description</th>
                <th><a style="text-decoration: none; color: black;" href="{{ path('room_asc') }}">RoomPrice</a></th>
                <th>MaxGuest</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.RoomNumber }}</td>
                <td>{{ room.IsAvailable ? 'Yes' : 'No' }}</td>
                <td>{{ room.Description }}</td>
                <td>{{ room.RoomPrice }}</td>
                <td>{{ room.MaxGuest }}</td>
                <td>
                    <a href="{{ path('room_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('room_new') }}">Create new</a>
{% endblock %}
